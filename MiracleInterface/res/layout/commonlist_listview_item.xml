<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@drawable/remind_add_view_line" />

        <LinearLayout
            android:id="@+id/layout_remind_add"
            style="@style/bg_rim_remind_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_remind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:textColor="@color/remind_add_view_text"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_remind_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置频率：3天1次" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_remind_add_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/listview_item_on" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>