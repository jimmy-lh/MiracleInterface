<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 隐藏listview分割线:android:divider="#00000000" -->
    <!-- 隐藏listview滚动条:android:fastScrollEnabled="false"加 android:scrollbars="none" -->
    <!-- android:scrollbars="none"定义在scrolling时哪个滚动条应该显示出来，或者不显示 -->

    <ListView
        android:id="@+id/lv_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#00000000" >
    </ListView>

    <Button
        android:id="@+id/btn_listview_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/listview_add_item" />

</LinearLayout>